{
  "manifest_version": 3,
  "name": "Work Health Reminder Pro",
  "version": "3.0.0",
  "description": "Nhắc nhở chăm sóc sức khỏe khi làm việc: đi bộ, uống nước, bài tập mắt, giãn cơ và nhiều hơn nữa!",
  "author": "Work Health Team",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Work Health Reminder"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ]
}
